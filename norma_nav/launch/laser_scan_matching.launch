<launch>
  <!-- Arguments -->
  <arg name="model" default="$(find norma_sim)/urdf/norma.urdf"/>
  <arg name="map_file" default="$(find norma_nav)/maps/lab_map.yaml"/>
  <arg name="open_rviz" default="true"/>

  <arg name="base_frame" default="base_link"/>
  <arg name="map_frame"  default="map"/>
  <arg name="odom_frame" default="odom"/>

  <!-- Turtlebot3 -->
  <include file="$(find norma_bringup)/launch/tf_publisher.launch" />

  <include file="$(find norma_bringup)/launch/sensors.launch" />

  <group if="true">
    <param name="laser_scan_matcher_node/do_compute_covariance" value="1"/>
    <param name="laser_scan_matcher_node/publish_pose_with_covariance" value="true"/>
    <param name="laser_scan_matcher_node/publish_pose_with_covariance_stamped" value="true"/>
  </group>
  <node pkg="laser_scan_matcher" type="laser_scan_matcher_node" name="laser_scan_matcher_node" output="screen">

    <param name="max_iterations" value="10"/>

    <param name="fixed_frame" value="world"/>
    <param name="base_frame" value="$(arg base_frame)"/>

    <param name="use_imu" value="true"/>
    <param name="use_odom" value="false"/>
    <param name="use_vel" value="false"/>

    <param name="use_cloud_input" value="true"/>
  </node>

  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find norma_nav)/rviz/gmapping.rviz" />
</launch>
