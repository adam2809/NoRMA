<launch>
  <!-- Arguments -->
  <arg name="model" default="$(find norma_sim)/urdf/norma.urdf"/>
  <arg name="map_file" default="$(find norma_nav)/maps/lab_map.yaml"/>
  <arg name="open_rviz" default="true"/>

  <arg name="base_frame" default="base_link"/>
  <arg name="map_frame"  default="map"/>
  <arg name="odom_frame" default="odom"/>

  <!-- Turtlebot3 -->
  <include file="$(find norma_bringup)/launch/tf_publisher.launch" />

  <include file="$(find norma_bringup)/launch/sensors.launch" />

  <node pkg="gmapping" type="slam_gmapping" name="norma_gmapping" output="screen">
    <param name="base_frame" value="$(arg base_frame)"/>
    <param name="map_frame"  value="$(arg map_frame)"/>
    <param name="odom_frame" value="$(arg odom_frame)"/>
    <rosparam command="load" file="$(find norma_nav)/param/gmapping_params.yaml" />
  </node>
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find norma_nav)/rviz/gmapping.rviz" />
</launch>
