<?xml version="1.0"?>
<robot name="norma">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="gray">
    <color rgba="0.8 0.8 0.8 1"/>
  </material>


  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.0 1.2 1.5"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.20"/>
      </geometry>
      <origin rpy="0 1.57075 0"/>
      <material name="gray"/>
    </visual>
  </link>


  <joint name="base_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.55 0 -0.75"/>
    <axis xyz="1 0 0"/>
  </joint>

</robot>

